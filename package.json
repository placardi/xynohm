{
  "name": "xynohm",
  "version": "0.1.0",
  "private": true,
  "description": "A VanillaJS way to build user interfaces.",
  "engines": {
    "node": ">= 10.14.1"
  },
  "directories": {
    "dist": "dist"
  },
  "scripts": {
    "start": "npm-run-all clean start:webpack",
    "start:webpack": "webpack-dev-server --hot --inline",
    "build:dev": "npm-run-all clean:tmp test build:webpack:dev",
    "build:prod": "npm-run-all clean:tmp test build:webpack:prod",
    "build:webpack:dev": "webpack --env.mode=development",
    "build:webpack::prod": "webpack --env.mode=production",
    "type:check": "tsc",
    "lint:ts": "tslint -t verbose -p . -c tslint.json",
    "clean:tmp": "rm -rf tmp/*",
    "clean:coverage": "rm -rf coverage",
    "test": "jest --config jest.config.js",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:watch": "jest --config jest.config.js --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/placardi/xynohm.git"
  },
  "author": "Alexander Zakharov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/placardi/xynohm/issues"
  },
  "homepage": "https://github.com/placardi/xynohm#readme",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "^23.3.10",
    "babel-loader": "^8.0.4",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.2.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "1.15.3",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.2",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2",
    "webpack": "^4.28.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.14"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5"
  }
}
