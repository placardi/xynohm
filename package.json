{
  "name": "xynohm",
  "version": "0.0.0-development",
  "private": true,
  "description": "A VanillaJS way to build user interfaces.",
  "engines": {
    "node": ">= 10.14.1"
  },
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "npm-run-all clean start:webpack",
    "start:webpack": "webpack-dev-server --hot --inline --config webpack/dev.config.js",
    "build:dev": "npm-run-all clean:dist test build:webpack:dev",
    "build:prod": "npm-run-all clean:dist test build:webpack:prod",
    "build:webpack:dev": "webpack --config webpack/dev.config.js",
    "build:webpack::prod": "webpack --config webpack/prod.config.js",
    "type:check": "tsc",
    "lint:ts": "tslint -t verbose -p . -c tslint.json",
    "clean:dist": "rm -rf dist/*",
    "clean:coverage": "rm -rf coverage",
    "test": "jest --config jest.config.js",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:watch": "jest --config jest.config.js --watchAll",
    "commit": "git-cz",
    "release:semantic": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/placardi/xynohm.git"
  },
  "author": "Alexander Zakharov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/placardi/xynohm/issues"
  },
  "homepage": "https://github.com/placardi/xynohm#readme",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-typescript": "^7.1.0",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/exec": "^3.3.2",
    "@semantic-release/git": "^7.0.7",
    "@types/jest": "^23.3.10",
    "babel-loader": "^8.0.4",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.2.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "1.15.3",
    "semantic-release": "^15.13.2",
    "semantic-release-cli": "^4.1.0",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.2",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2",
    "webpack": "^4.28.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "^4.1.5"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
